<% if logged_in? %>
  <h2>Upload New <span class='kuiq'>kuiq</span> Video</h2>
  <ul><li>
    <% if !flash[:warning].blank? %>  
      <h4 class="error_message"><%= flash[:warning] %></h4>
    <% end %>
    
    <% form_tag 'create', :multipart => true do %>
    
      <p><%= label_tag "YouTube ID" %><br/>
      <%= text_field_tag 'yt_login', params[:yt_login] %></p>
      
      <p><%= label_tag "YouTube Password" %><br/>
      <%= password_field_tag 'yt_password' %></p>
    
      <p><%= label_tag 'title' %><br />
      <%= text_field_tag 'video[title]', params[:video][:title] %></p>
  
      <p><%= label_tag 'description'%><br />
      <%= text_area_tag 'video[description]', params[:video][:description] , :rows => 10, :cols => 40 %></p>
  
      <p><%= label_tag 'category' %><br />
      <%= select 'video', :category, @categories %></p>
  
      <p><%= label_tag 'keywords' %><br />
      <%= text_field_tag 'video[keywords]', params[:video][:keywords] %></p>
      
      <p><%= label_tag 'Select a file' %><br />
      <%= file_field_tag 'video[file]' %></p>
      
      <p><%= submit_tag 'Upload video' %></p>
    <% end %>
  </li></ul>
<% else %>
  <h2>You must login to upload a video.</h2>
  <h4><%= "#{link_to("Login", new_session_path)} or #{link_to("Register", new_user_path)}" %></h4>
<% end%>